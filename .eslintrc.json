{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard",
    "standard-jsx",
    "standard-react"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "no-extra-semi": "error",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "space-before-function-paren": "off"
  }
}
